<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <InvariantGlobalization>true</InvariantGlobalization>
    <IsAotCompatible>True</IsAotCompatible>
    <PublishAot>true</PublishAot>
    <PublishTrimmed>True</PublishTrimmed>
    <TrimMode>full</TrimMode>
    <DebugSymbols>false</DebugSymbols>
    <JsonSerializerIsReflectionEnabledByDefault>false</JsonSerializerIsReflectionEnabledByDefault>
    <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
    <RuntimeIdentifiers>linux-x64;linux-arm64;win-x86;win-x64;win-arm64</RuntimeIdentifiers>
    <OptimizationPreference>Speed</OptimizationPreference>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AngleSharp" Version="1.1.2" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="9.0.0" />
    <!--<PackageReference Include="YoutubeExplode" Version="6.4.3" />-->
  </ItemGroup>

  <ItemGroup>
    <Reference Include="YoutubeExplode">
      <HintPath>..\external\YoutubeExplode.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
